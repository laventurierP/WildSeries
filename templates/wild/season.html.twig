{% extends 'base.html.twig' %}

{% block body %}

    <h3>Saison {{ season.id }} de {{ program.title }}</h3>
    <p>{{ program.summary }}</p><br>
    <ul>
        {% for episode in episode %}
            <li><strong>Episode {{ episode.number }} :</strong>  <a href="{{ path('wild_show_episode', {id: episode.id})}}">{{ episode.title }}</a></li>
            <ul>
                <li>{{ episode.synopsis }}</li>
            </ul>
            <br>
        {% endfor %}
    </ul>
{% endblock %}